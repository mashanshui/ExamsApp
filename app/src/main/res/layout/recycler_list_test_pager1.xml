<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_testpager_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/imageView21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_testpager_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_testpager_name"
        app:srcCompat="@drawable/more_dark" />

    <TextView
        android:id="@+id/tv_testpager_progress"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="进度："
        android:textColor="@color/text_gray3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_testpager_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_testpager_name" />

    <TextView
        android:id="@+id/tv_progress_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/text_gray3"
        app:layout_constraintBottom_toBottomOf="@+id/tv_testpager_progress"
        app:layout_constraintStart_toEndOf="@+id/tv_testpager_progress"
        app:layout_constraintTop_toTopOf="@+id/tv_testpager_progress" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="@color/text_gray3"
        app:layout_constraintBottom_toBottomOf="@+id/tv_progress_done"
        app:layout_constraintStart_toEndOf="@+id/tv_progress_done"
        app:layout_constraintTop_toTopOf="@+id/tv_progress_done" />

    <TextView
        android:id="@+id/tv_progress_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/text_gray3"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stroke_recycler_divider_color"
    tools:context=".ui.activity.user.AddAdviceActivity">

    <com.allen.library.SuperTextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:paddingStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sLeftTextColor="@color/text_gray3"
        app:sLeftTextString="类型"
        app:sRightIconRes="@drawable/arrow_right" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_object"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="8dp"
        android:paddingStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:sLeftTextColor="@color/text_gray3"
        app:sLeftTextString="对象"
        app:sRightIconRes="@drawable/arrow_right" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edt_noround_conner"
        android:ems="10"
        android:hint="标题"
        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/text_gray1"
        android:textColorHint="@color/text_gray3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_object" />

    <EditText
        android:id="@+id/et_order_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edt_noround_conner"
        android:ems="10"
        android:hint="订单号"
        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/text_gray1"
        android:textColorHint="@color/text_gray3"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edt_noround_conner"
        android:gravity="left|top"
        android:hint="内容"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:maxLines="6"
        android:padding="15dp"
        android:textColor="@color/text_gray1"
        android:textColorHint="@color/text_gray3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_order_code" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_contact_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="8dp"
        android:paddingStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_content"
        app:sLeftTextColor="@color/text_gray3"
        app:sLeftTextString="联系方式"
        app:sRightIconRes="@drawable/arrow_right" />

    <EditText
        android:id="@+id/et_contact_method"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edt_noround_conner"
        android:ems="10"
        android:hint="联系方式具体内容"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="200"
        android:padding="15dp"
        android:textColor="@color/text_gray1"
        android:textColorHint="@color/text_gray3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact_type" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_confirm"
        style="@style/btn_match_parent_radius"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="确定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_contact_method" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stroke_recycler_divider_color"
    tools:context=".ui.activity.user.PersonDataActivity">

    <com.allen.library.SuperTextView
        android:id="@+id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/superTextView_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sLeftTextString="账号"
        app:sRightTextColor="@color/text_gray3" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/superTextView_height"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_account"
        app:sLeftTextString="手机号"
        app:sRightTextColor="@color/text_gray3" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/superTextView_height"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone"
        app:sLeftTextString="用户名"
        app:sRightMaxEms="16"
        app:sRightIconRes="@drawable/arrow_right"
        app:sRightTextColor="@color/text_gray3" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/superTextView_height"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:sLeftTextString="性别"
        app:sRightIconRes="@drawable/arrow_right"
        app:sRightTextColor="@color/text_gray3" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/superTextView_height"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sex"
        app:sLeftTextString="年龄"
        app:sRightIconRes="@drawable/arrow_right"
        app:sRightTextColor="@color/text_gray3" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/superTextView_height"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age"
        app:sLeftTextString="邮箱"
        app:sRightIconRes="@drawable/arrow_right"
        app:sRightTextColor="@color/text_gray3" />
</android.support.constraint.ConstraintLayout>